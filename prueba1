#include <stdio.h>

int main () {
    int num;
    int numNegativo=0; 
    // Declaracion de variables

printf("Ingrese los numeros, ingrese 0 para parar \n");
 //Se pide al usuario ingresar los numeros, aclarandole que ocurre si ingresa el numero 0

 while (1) {
        scanf("%d", &num);

        if (num == 0) {
            break;
        } else if (num < 0) {
            numNegativo++;
        }
    }
}
